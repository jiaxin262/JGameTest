<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/icon_font_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/right_content_tv"
        app:layout_constraintRight_toLeftOf="@+id/right_content_tv"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/right_content_tv"
        android:text="内容"
        android:layout_width="28dp"
        android:layout_height="17dp"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        app:layout_constraintLeft_toLeftOf="@+id/title_tv" />

    <TextView
        android:id="@+id/title_tv"
        android:text="标题"
        android:layout_width="126dp"
        android:layout_height="35dp"
        android:layout_marginStart="144dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.ConstraintLayout>